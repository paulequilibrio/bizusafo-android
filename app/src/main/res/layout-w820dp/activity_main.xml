<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_tasafo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/margem_vertical"
        android:layout_marginLeft="@dimen/margem_horizontal"
        android:layout_marginEnd="@dimen/margem_horizontal"
        android:layout_marginRight="@dimen/margem_horizontal"
        android:layout_marginStart="@dimen/margem_horizontal"
        android:layout_marginBottom="@dimen/margem_vertical"
        android:textStyle="bold"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_bem_vindo"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/margem_vertical"
        android:layout_marginLeft="@dimen/margem_horizontal"
        android:layout_marginEnd="@dimen/margem_horizontal"
        android:layout_marginRight="@dimen/margem_horizontal"
        android:layout_marginStart="@dimen/margem_horizontal"
        android:layout_marginBottom="@dimen/margem_vertical"
        android:textSize="@dimen/welcome_text" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margem_vertical"
        android:layout_marginLeft="@dimen/margem_horizontal"
        android:layout_marginEnd="@dimen/margem_horizontal"
        android:layout_marginRight="@dimen/margem_horizontal"
        android:layout_marginStart="@dimen/margem_horizontal"
        android:layout_marginBottom="@dimen/margem_vertical"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/campo_email"
                    android:hint="@string/hint_campo_login" />

                <EditText
                    android:id="@+id/campo_senha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_marginTop="24dp"
                    android:hint="@string/hint_campo_senha" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/texto_crie_sua_conta"
                android:autoLink="web"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esqueceu sua senha?"
                android:autoLink="web"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_botao_entrar"
        android:id="@+id/botao_entrar"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="bottom|end"
        android:textStyle="italic"
        android:textColor="#444"
        android:padding="20dp"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_marginTop="20dp" />

</LinearLayout>
